<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/addphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Product Name" />

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtName"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Product Price" />

        <EditText
            android:id="@+id/edtQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPrice"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Quantity" />

        <!--<EditText
            android:id="@+id/edtDiscount"
            android:inputType="none|number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtQty"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Discount(%)" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_below="@id/edtDiscount"
            android:layout_centerHorizontal="true"
            android:layout_width="210dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="#f3e5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/month"
            app:layout_constraintTop_toBottomOf="@+id/month"
            tools:ignore="UnknownId" />-->


        <Button
            android:id="@+id/btnAdd"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtQty"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Add Product" />

        <Button
            android:id="@+id/btnList"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAdd"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="View Product List" />

        <Button
            android:id="@+id/btnDiscountAdd"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:minWidth="160dp"
            android:text="Add Discount" />

        <Button
            android:id="@+id/btnProduct"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnList"
            android:layout_marginStart="12dp"
            android:minWidth="160dp"
            android:text="Display Product" />

        <!--<Button
            android:id="@+id/btnDiscountList"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnDiscountAdd"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Add Product" />-->

    </RelativeLayout>

</ScrollView>